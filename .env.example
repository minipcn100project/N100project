# Twitter API Keys (Option 1: API 사용)
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here
TWITTER_HANDLE=YourTwitterHandle

# Twitter Web Automation (Option 2: API 없이 웹 자동화 사용)
# API 승인 대기 중일 때 사용
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
USE_WEB_AUTOMATION=false  # true로 설정하면 API 대신 웹 자동화 사용

# Solana Configuration
SOLANA_WALLET_PATH=./wallet.json
SOLANA_RPC_URL=https://api.devnet.solana.com
# For mainnet: https://api.mainnet-beta.solana.com
CANDY_MACHINE_ID=your_candy_machine_id_here

# NFT Configuration
NFT_PRICE_SOL=0.5
NFT_COLLECTION_NAME=N100 Collection
NFT_SYMBOL=N100
NFT_ROYALTY_PERCENT=5

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO=minipcn100project/N100project

# Domain (GitHub Pages)
DOMAIN=minipcn100project.github.io/N100project

# ComfyUI
COMFYUI_URL=http://localhost:8188

# Schedule (hours between mints)
MINT_INTERVAL_HOURS=1
